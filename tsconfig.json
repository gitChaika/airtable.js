{
    "compilerOptions": {
        "lib": ["ES5", "DOM"],
        "target": "ES5",
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "lib",
        "noImplicitAny": false,
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "sourceRoot": "/"
    },

    "include": ["src/**/*.ts", "src/internal_config.json"],
    "exclude": [
        "node_modules",
        "/node_modules",
        "dist",
        "build",
        "**/*.d.ts"
    ]
}
